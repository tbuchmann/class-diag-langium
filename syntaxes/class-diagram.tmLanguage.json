{
  "name": "class-diagram",
  "scopeName": "source.class-diagram",
  "fileTypes": [
    ".cdiag"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.class-diagram",
      "match": "\\b(abstract|assoc|class|composite|datatype|enum|extends|impl|implements|interface|none|package|primitive|private|protected|public|shared|spec|static|x)\\b"
    },
    {
      "name": "string.quoted.double.class-diagram",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.class-diagram",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.class-diagram",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.class-diagram"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.class-diagram"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.class-diagram"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.class-diagram"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.class-diagram",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
